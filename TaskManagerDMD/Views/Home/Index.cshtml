<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>
<script type="text/javascript">
    function showSubtasks(selectedId) {
        $.ajax({
            url: '@Url.Action("GetSubtasks", "Home",new {culture=ViewData["CultureUrlParam"].ToString() },null)',//controller name and action
            type: 'POST',
            data: { id: selectedId } //id
            })
            .success(function (result) {
                $('#subtasksList').html(result); //write returned partial view to empty div
            })
            
    }
    function showTaskDetails(selectedId) {
        $.ajax({
            url: '@Url.Action("GetTaskDetails", "Home", new { culture = ViewData["CultureUrlParam"].ToString() }, null)',//controller name and action
            type: 'POST',
            data: { id: selectedId } //id
            })
            .success(function (result) {                                
                $('#taskDetails').html(result); //write returned partial view to empty div                                
            })
            
    }
    function showTaskCreationLink(selectedId) {
        $.ajax({
            url: '@Url.Action("GetTaskCreationLink", "Home", new { culture = ViewData["CultureUrlParam"].ToString() }, null)',//controller name and action
            type: 'POST',
            data: { id: selectedId } //id
            })
            .success(function (result) {                                
                $('#taskCreationLink').html(result); //write returned partial view to empty div
            })            
    }
</script>

<div class="container-fluid">
    <div class="row">        
        <div class="col-md-5">
            <h2>@ViewData["Header_Index"]</h2>
            <div id="taskCreationLink">
                <script type="text/javascript">
                    showTaskCreationLink("0")
                </script>
            </div>
            <div id="jstree">

                <script type="text/javascript">

                $(function () {
                    $('#jstree').on('changed.jstree', function (e, data) {
                        showSubtasks(data.selected[0]);
                        showTaskDetails(data.selected[0]);
                        showTaskCreationLink(data.selected[0]);
                    }).jstree({
                        "core": {
                            "themes": {
                                "variant": "large"
                            },
                            "data": @Html.Raw(ViewBag.Json)}
                    });
                });
                </script>
            </div>
            <div>
                <p></p>
                <p>@ViewData["HierarchyNote_Index"]</p>
            </div>
        </div>

        
        <div class="col-md-7">            
            <div id="taskDetails">
            </div>
            <h2>@ViewData["Subtasks_Index"]</h2>
            <div id="subtasksList">
                <script type="text/javascript">
                showSubtasks("0")
                </script>
            </div>
        </div>
    </div>
</div>


